#!/usr/bin/env deno
'use strict';

const v = Deno.version.deno.split('.');
const major = parseInt(v[0], 10);
const minor = parseInt(v[1], 10);
const patch = parseInt(v[2], 10);
if (major < 1 || (major === 1 && minor === 0 && patch < 4)) {
  console.error(`\nYour current version of Deno is v${Deno.version.deno}, however Stencil requires v1.0.2 or greater. It's recommended to install latest version of Deno (https://deno.land/).\n`);
  Deno.exit(1);
}

console.log(Deno)

const cli = import('../cli/deno/index.js');
cli.run({
  logger: cli.createDenoLogger(),
  sys: cli.createDenoSystem(),
});
